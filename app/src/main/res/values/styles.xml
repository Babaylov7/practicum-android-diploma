<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text_Medium_22" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Text_Bold_32" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/thirty_two_size_text</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="Text_Medium_16" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ScreenHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="android:layout_marginTop">@dimen/five_space</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.00</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fourteen_space</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlaceholderMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="VacancyHeadline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
    </style>

    <style name="VacancyDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
    </style>

    <style name="CountriesAndRegions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
