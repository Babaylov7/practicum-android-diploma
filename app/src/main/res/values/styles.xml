<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WorkedApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/four_space</item>
        <item name="android:layout_marginTop">@dimen/eleven_space</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/thirty_two_size_text</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="DeveloperName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/four_space</item>
        <item name="android:layout_marginTop">@dimen/four_space</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="ScreenHeadline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="android:layout_marginTop">@dimen/five_space</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.00</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/fourteen_space</item>
        <item name="android:layout_marginTop">@dimen/seven_space</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="PlaceholderMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/two_space</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="android:padding">@dimen/eleven_space</item>
        <item name="android:drawablePadding">@dimen/four_space</item>
        <item name="android:textAlignment">center</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="ChipMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/three_space</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="VacancyName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/six_space</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/thirty_two_size_text</item>
        <item name="fontWeight">700</item>

    </style>

    <style name="VacancyHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/four_space</item>
        <item name="android:layout_marginTop">@dimen/five_space</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="VacancyDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/two_space</item>
        <item name="android:layout_marginTop">@dimen/one_point_space</item>
        <item name="android:layout_marginBottom">@dimen/half_space</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="VacancyDetailsCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="VacancyDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/one_space</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="CountriesAndRegions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontWeight">400</item>
    </style>

    <!-- Стили для экранов фильтрации -->
    <style name="FilteringSettingsTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">@dimen/zero_space</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SalaryTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/blue</item>
        <item name="cursorColor">@color/blue</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>


</resources>
